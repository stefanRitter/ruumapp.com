// breakpoints
iphone     = "(max-width:320px)"
phone      = "(max-width:460px)"
phablet    = "(max-width:768px)"
tablet     = "(max-width:980px)"
typeheight = "(max-height:375px)"

.inline-no-phone
  display: inline-block;
  @media phone
    display: none;

.only-phone
  display: none;
  @media phone
    display: auto;


// variables
// fontfamily  = 'Raleway', Helvetica, Arial, sans-serif
// fontfamily  = 'Roboto', sans-serif;
fontfamily  = 'Open Sans', sans-serif;


// general
body
html
  height 100%
  margin 0
  font-family fontfamily
  font-size 18px
  @media tablet
    font-size 14px

h1
h2
  font-weight 400

h1
  font-size 3em

h2
  font-size 1.5em
  padding 0 0.3em

h3
  font-size 1.3em
  margin 0

section
  margin auto
  max-width 1200px
  text-align center


// responsive
.phone-only
  display none
  @media phone
    display block !important

.clear-both
  clear both
  padding-top 2em


// components
.title
  text-align center
  margin 5px
  margin-top 0
  h3
    font-weight: normal;
    padding-bottom: 2em
    max-width: 600px
    margin: 5px auto;
    line-height: 1.4
  h2
    padding-bottom 0
    margin 0
    line-height 1.5
    font-weight: bold;
    strong
      font-size: 1.3em
    em
      font-size: 0.8em
  h1
    a
      color inherit
      text-decoration none

.alerts-form
  text-align center
  padding 10px 15px
  vertical-align: top;
  margin-bottom: 3em;
  a
    color White
    min-width: 200px
    text-align: center;
    display: inline-block;
  h3
    font-size 1em
    padding: 0
    margin: 5px
    margin-bottom 0.4em
  label, input, button
    display block
    min-width 270px
    margin 5px 0
    height 38px
    vertical-align: top;
    width: 100%
    padding 0
  .form-button
    height 41px
  label
    font-weight bold
    margin 0
  input
    font-family: fontfamily
    text-indent: 12px;
    border-radius: 4px;
    border: 2px solid #d3d3d3;
    font-size: 1.2em;

.form-group
  display inline-block
  text-align left
  clear both
  vertical-align: top;
  margin 0 5px

.form-button
.button
  appearance none
  padding 10px 20px
  text-decoration none
  border: 2px solid #E30000;
  background: #E30000;
  font-family: fontfamily
  color: #fff;
  text-decoration: none;
  font-size: 1em;
  font-weight: bold;
  border-radius: 5px;
  text-transform: uppercase;
  letter-spacing: 1px;
  cursor: pointer;
  &:hover
    color inherit
    background #E30000

.features
  margin 5px
  text-align: center;
  vertical-align: top;
  .feature
    display inline-block
    vertical-align: top;
    width 25%
    max-width: 300px
    margin 3%
    @media phone
      width: auto;
    h2
      text-align: center;
      font-weight: bold;
    p
      text-align: left;
      line-height: 1.5
    img
      width 4.5em

#footer
  clear both
  text-align center
  padding 5em 2em 10em
  a
    color black
    text-decoration none
    border-bottom 2px solid black
  h2
    font-size 2em
    margin-bottom: 1em
