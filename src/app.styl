// breakpoints
iphone     = "(max-width:320px)"
phone      = "(max-width:460px)"
phablet    = "(max-width:768px)"
tablet     = "(max-width:980px)"
typeheight = "(max-height:375px)"

.inline-no-phone
  display: inline-block;
  @media phone
    display: none;

.only-phone
  display: none;
  @media phone
    display: auto;



// variables
fontfamily = 'Lato', sans-serif;
maincolor = #39ABBB;


// general
body
html
  height 100%
  margin 0
  padding 0
  font-family fontfamily
  font-size 18px
  background: whitesmoke
  @media tablet
    font-size 14px
  @media phone
    font-family: helvetica, arial, sans-serif;

h1
h2
  font-weight 400

h1
  font-size 3em

h2
  font-size 1.5em
  padding 0 0.3em

h3
  font-size 1.3em
  margin 0

section
  margin auto
  max-width 1200px
  text-align center


// responsive
.phone-only
  display none
  @media phone
    display block !important

.clear-both
  clear both
  padding-top 2em


// components
.lightgray
  background: whitesmoke
  overflow hidden

.bluebackground
  background: maincolor
  position: absolute;
  top: 0
  left: 0
  right: 0
  height 80%
  @media phone
    display: none;
  @media (max-width:670px)
    height: 50%

.devicecontainer
  margin: 0 10px
  @media phone
    margin: 0 5px

.device
  max-width: 900px
  text-align: center;
  position: relative;
  margin: auto
  -webkit-box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.5);
  -moz-box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.5);
  box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.5);
  border-left: 90px solid white;
  border-right: 90px solid white;
  border-top: 40px solid white;
  border-bottom: 40px solid white;
  border-radius: 50px;
  background: white
  .placeholderimage
    width 100%
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1
  video, img
    width: 100%
  video
    z-index: 100
    position relative
  .screen
    width: 100%
    -webkit-box-shadow: 0px 0px 0px 2px rgba(238,238,238,1);
    -moz-box-shadow: 0px 0px 0px 2px rgba(238,238,238,1);
    box-shadow: 0px 0px 0px 2px rgba(238,238,238,1);
  .homebutton
    position: absolute;
    display: block;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: #EEEEEE;
    right: -72px;
    top: 50%;
    margin-top: -25px;
  @media tablet
    border-left: 60px solid white;
    border-right: 60px solid white;
    border-top: 20px solid white;
    border-bottom: 20px solid white;
    border-radius: 25px;
    .homebutton
      width: 30px
      height: 30px
      margin-top: -15px;
      right: -45px;
  @media phone
    border-left: 30px solid white;
    border-right: 30px solid white;
    border-top: 10px solid white;
    border-bottom: 10px solid white;
    border-radius: 15px;
    .homebutton
      width: 15px
      height: 15px
      margin-top: -7px;
      right: -25px;


.title
  text-align center
  margin 0
  padding: 0
  color: white
  position: relative;
  &.black
    color black
  @media phone
    background: maincolor
    overflow: hidden;
    padding-bottom: 20px
    &.black
      background: transparent
      color black
  .buttons
    position: absolute;
    top: 15px
    right: 15px
    @media phone
      position: static
      padding: 0 0 20px 0

  .max-width
    margin: auto;
    padding-top: 6%;
    max-width: 1200px
    position: relative;
  h3
    font-weight: 100;
    @media phone
      font-weight: 300
    padding-bottom: 1em
    max-width: 700px
    margin: 5px auto;
    line-height: 1.4
    em
      font-size: 0.8em
  h2
    padding 0
    padding-top 6%
    margin 0
    line-height 1.5
    font-weight: bold;
    font-size: 2em;
  .logo
    position: absolute;
    left: 10px
    top: 20px
    margin: 0;
    padding: 0;
    font-size: 0;
    @media phone
      position: static;


.alerts-form
  text-align left
  padding 0 6px
  vertical-align: top;
  display: block;
  margin auto
  max-width: 435px
  border-radius 10px
  label, input, button
    display block
    margin 5px 0
    height 38px
    vertical-align: top;
    padding 0
  .form-button
    height 41px
  label
    font-weight bold
    margin 0
  input
    font-family: fontfamily
    text-indent: 12px;
    border-radius: 4px;
    border: none;
    font-size: 1.2em;
    background: #2F8FA0;
    width: 100%
    outline: none
    &::-webkit-input-placeholder
      color: white;
    &:-moz-placeholder
      color: white;
    &::-moz-placeholder
      color: white;
    &:-ms-input-placeholder
      color: white;
    &::placeholder
      color white
  .form-group
    display block
    text-align left
    clear both
    vertical-align: top;
    margin 0
    padding 0
    margin-top: 10px
  button
    width: 100%


.form-button
.joinbutton
.signinbutton
.button
  appearance none
  padding 0 20px
  text-decoration none
  border: none;
  background: #F0AB00;
  font-family: fontfamily
  color: white;
  text-decoration: none;
  font-size: 16px;
  font-weight: bold;
  border-radius: 5px;
  letter-spacing: 1px;
  cursor: pointer;
  width: 175px
  &:hover
    color white
    background #D79900

.signinbutton
.joinbutton
  padding: 10px 20px;
  text-transform: uppercase;
  @media phone
    display: block;
    margin: auto;
    width: 100%;
    max-width: 300px;

a.signinbutton
  background: transparent
  padding: 9px 19px;
  border: 1px white solid;
  color white
  margin-right: 20px
  text-transform: none;
  &:hover
    color white
    background transparent
  @media phone
    display: none

.joinform
  margin-top: 3em
  text-align: center;


.features
  margin 5px 0
  text-align: center;
  vertical-align: top;
  &.usecases
    background: white
    overflow: hidden;
    margin-top: 3em
    @media phone
      margin-top: 0
  .feature
    display inline-block
    vertical-align: top;
    width 25%
    max-width: 300px
    margin 3%
    @media phone
      width: auto;
    h1
      margin-top: 0
      em
        display: inline-block;
        font-size: .6em;
        position: absolute;
        left: 0;
        width: 210%;
        bottom: -1em;
        color inherit
        font-weight: bold
        @media tablet
          font-size: .5em
      img
        vertical-align: middle;
        width:80%;
        max-width:120px;
      a
        position: relative;
        left: -1.4em;
        color inherit
        text-decoration none
    h2
      text-align: center;
      font-weight: bold;
    p
      text-align: left;
      line-height: 1.5
      &.center
        text-align: center;
      .button
        padding: 10px 20px
        background: black
        border: 0
        &:hover
          color gray
    img
      width 4.5em

#footer
  clear both
  text-align center
  padding 5em 2em 10em
  a
    color black
    text-decoration none
    border-bottom 2px solid black
  h2
    font-size 2em
    margin-bottom: 1em
