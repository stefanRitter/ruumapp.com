// breakpoints
iphone     = "(max-width:320px)"
phone      = "(max-width:460px)"
phablet    = "(max-width:768px)"
tablet     = "(max-width:980px)"
typeheight = "(max-height:375px)"


// colors
blue  = rgb(0, 175, 255)
gray  = #222222


// general
body
html
  height 100%
  margin 0
  font-family 'Raleway', Helvetica, Arial, sans-serif
  font-size 18px
  @media tablet
    font-size 14px

h1
h2
  font-weight 400

h1
  font-size 3em

h2
  font-size 1.5em
  padding 0 0.3em

h3
  font-size 1.3em
  margin 0

section
  margin auto
  max-width 1200px
  text-align center


// responsive
.phone-only
  display none
  @media phone
    display block !important

.clear-both
  clear both
  padding-top 2em


// components
.title
  text-align center
  margin 5px
  margin-top 0
  h3
    font-weight: normal;
    padding-bottom: 2em
    max-width: 600px
    margin: 5px auto;
  h2
    padding-bottom 0
    margin 0
    line-height 1.5
    font-weight: bold;
  h1
    border 2px solid black
    display inline-block
    margin .5em 0
    padding .5em 1em 2px .16em
    vertical-align middle
    @media phone
      padding 0.5em 0 0 0
    img
      vertical-align middle
      height 2em
    a
      color inherit
      text-decoration none
    @media phone
      em
        font-size .7em
        position relative
        top -0.5em

.alerts-form
  position fixed
  bottom 0
  left 0
  right 0
  background LightGray
  text-align center
  padding 10px 15px
  border-top: 1px solid darkgray
  vertical-align: top;
  a
    color White
    min-width: 200px
    text-align: center;
    display: inline-block;
  h3
    font-size 1em
    padding: 0
    margin: 5px
    margin-bottom 0.4em
  label, input, button
    display block
    min-width 270px
    margin 5px 0
    height 38px
    vertical-align: top;
    width: 100%
    padding 0
  .form-button
    height 40px
  label
    font-weight bold
    margin 0
  input
    border 0
    border-radius: 4px
    border-bottom 2px solid Black
    font-size 1.2em

.form-group
  display inline-block
  text-align left
  clear both
  vertical-align: top;

.form-button
.button
  appearance none
  border 0
  padding 10px 20px
  background rgb(245, 71, 0)
  color white
  text-decoration none
  font-size 1em
  font-weight bold
  border-radius 5px
  text-transform uppercase
  letter-spacing 1px
  border-bottom 2px solid Black
  cursor pointer
  &:hover
    color inherit
    background #007acc

.features
  margin 5px
  text-align: center;
  vertical-align: top;
  .feature
    display inline-block
    vertical-align: top;
    width 25%
    max-width: 300px
    margin 3%
    h2
      text-align: center;
      font-weight: bold;
    p
      text-align: left;
      line-height: 1.5

#footer
  clear both
  text-align center
  padding 5em 2em 10em
  a
    color black
    text-decoration none
    border-bottom 2px solid black
  h2
    font-size 2em
    margin-bottom: 1em
